mixin storeForm(store = {})
  form(action="/add" method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name" placeholder="Name of Store" value=store.name)
    label(for="description") Description
    textarea(name="description" placeholder="Describe the Store")= store.description
    - const choices = ["Free Wifi", "Open Late", "Family Friendly", "Vegetarian", "Licensed"]
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save â†’" class="button")
