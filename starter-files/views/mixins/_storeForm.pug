mixin storeForm(store = {})
  form(action=`/add/${store._id || ""}` method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name" placeholder="Name of the store" value=store.name)
    label(for="description") Description
    textarea(name="description" placeholder="Describe the store")= store.description
    label(for="address") Address
    input(type="text" id="address" name="location[address]" placeholder="Enter address of the store" value=(store.location && store.location.address))
    label(for="lng") Address Lng
    input(type="number" id="lng" name="location[coordinates][0]" value=(store.location && store.location.coordinates[0]) required)
    label(for="lat") Address Lat
    input(type="number" id="lat" name="location[coordinates][1]" value=(store.location && store.location.coordinates[1]) required)
    - const choices = ["Free Wifi", "Open Late", "Family Friendly", "Vegetarian", "Licensed"]
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save â†’" class="button")
